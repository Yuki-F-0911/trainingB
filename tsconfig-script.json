{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "isolatedModules": false
  },
  "include": [
    "scripts/**/*.ts",
    "src/lib/**/*.ts",
    "src/models/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/app",
    "src/components"
  ]
} 